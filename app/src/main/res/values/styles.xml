<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="InputFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7b111111</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">0.58</item>
    </style>
    <style name="ResultFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#66111111</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">0.34</item>

    </style>
    <style name="DigitFont" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#c5111111</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:onClick">onDigitClick</item>
    </style>

    <style name="OperationFont" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#7b111111</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:onClick">onOpClick</item>
    </style>

</resources>
